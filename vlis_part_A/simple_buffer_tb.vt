module buffer_tb;

  reg in;
  wire out;

  // Instantiate the buffer module
  buffer buff (out, in);

  initial begin
    // Apply test stimuli
    in = 0; #10; // Apply 0 for 10ns
    $display("Input = %b, Output = %b", in, out);

    in = 1; #20; // Apply 1 for 20ns
    $display("Input = %b, Output = %b", in, out);

    $finish;
  end

endmodule
